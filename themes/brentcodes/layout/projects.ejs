<section class="section has-margin-top-20">
    <div class="container">
        <div class="row">
            <div class="columns is-multiline">
                <% site.posts.forEach(function(post){ %>
                <% if (post.type === 'project') { %>
                <div class="column is-one-quarter">
                    <div class="card medium">
                        <div class="card-image">
                            <figure class="image">
                                <img src="<%- post.image %>" alt="Image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <p>
                                <%- truncate(post.content, {length: 350, omission: '...'}) %>
                            </p>
                        </div>
                        <footer class="card-footer">
                            <p class="card-footer-item">
                                <a class="button is-fullwidth is-info is-outlined" href="<%- post.code %>">
                                    <span class="icon">
                                        <i class="fab fa-github"></i>
                                    </span>
                                    <span>Code</span>
                                </a>
                            </p>
                            <p class="card-footer-item">
                                <a class="button is-fullwidth is-primary is-outlined" href="<%- url_for(post.path) %>
">
                                    <span class="icon">
                                        <i class="fas fa-beer"></i>
                                    </span>
                                    <span>Demo</span>
                                </a>
                            </p>
                        </footer>
                    </div>

                </div>
                <% } %>
                <% }) %>
            </div>
        </div>
    </div>
</section>